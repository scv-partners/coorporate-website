---
interface Props {
  bgImage?: string
  title?: string
}

const { bgImage, title } = Astro.props
---

<div
  class={`h-[400px] px-6 py-4 shadow-sm bg-[url('${bgImage}')] bg-center bg-no-repeat bg-cover bg-fixed border border-red-600 flex justify-center items-center items-center`}
>
  <h1 class="text-4xl font-bold text-white">{title}</h1>
</div>
